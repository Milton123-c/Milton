<%- include('partials/_header') %>

    <header class="container" style="margin-top: 70px;">
        <h3>Nombre: <span class="text-primary">Milton David Gago Mercado</span></h3>
        <br>
        <div class="form-group w-25" id="mvt">
            <span>Introdusca Su Clave</span>
            <input type="password" id="claveActivar" class="form-control"><br>
            <button type="button" class="btn btn-outline-dark" id="click-form">Mostrar Formulario</button>
        </div>
        <div class="cla" id="formulario">
            <form action="/datos" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="nombre_archivo" class="font-weight-bold">Tipo de Archivo</label>
                            <select name="tipo" id="" class="form-control">
                                <option value="cero" class="font-weight-bolder">Seleccione un tipo</option>
                                <option value="mantenimiento" class="font-weight-bolder">Mantenimiento</option>
                                <option value="programacion" class="font-weight-bolder">Programacion</option>
                                <option value="entorno" class="font-weight-bolder">Entorno</option>
                                <option value="tic" class="font-weight-bolder">TIC</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="archivo">Subir Archivo</label>
                            <input type="file" name="archivo" id="" class="form-control">
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="nombre" class="font-weight-bold">Nombre del archivo</label>
                            <input type="text" placeholder="Nombre" class="form-control" name="nombre">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="description" class="font-weight-bold">Description del archivo</label>
                            <input type="text" placeholder="Descripcion" class="form-control" name="descripsion">

                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Enviar datos" class="form-control">
                </div>
            </form>
        </div>
    </header>



    <%- include('partials/footer') %>